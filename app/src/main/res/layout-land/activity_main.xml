<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#6094B5F5">


    <TextView
        android:id="@+id/Photeo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Photeo"
        android:fontFamily="@font/chopinscript"
        android:textColor="#E38E0E"
        android:textSize="96dp"
        android:layout_marginLeft="50dp"
        app:layout_constraintHorizontal_bias="0.417"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/Appareil"
        android:layout_width="187dp"
        android:layout_height="82dp"
        android:background="@drawable/pel1"
        android:fontFamily="@font/chopinscript"
        android:text="Appareil"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="#0051ED"
        android:textSize="36sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.200"/>

    <Button
        android:id="@+id/Galerie"
        android:layout_width="187dp"
        android:layout_height="82dp"
        android:background="@drawable/pel1"
        android:fontFamily="@font/chopinscript"
        android:text="Galerie"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="#0051ED"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/Appareil"
        app:layout_constraintRight_toLeftOf="@id/Exit"
        app:layout_constraintTop_toTopOf="@id/Appareil"
        app:layout_constraintVertical_bias="0.0"/>

    <Button
        android:id="@+id/Exit"
        android:layout_width="187dp"
        android:layout_height="82dp"
        android:background="@drawable/pel1"
        android:fontFamily="@font/chopinscript"
        android:text="Quitter"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="#0051ED"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toRightOf="@id/Galerie"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/Galerie"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/logo_finale_fondtransparent"
        android:layout_marginLeft="95dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.409"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.450" />
</androidx.constraintlayout.widget.ConstraintLayout>